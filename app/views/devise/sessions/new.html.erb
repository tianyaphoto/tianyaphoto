<div class="devise-form well">

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"} ) do |f| %>
    <fieldset>
    <legend>用户登录</legend>
    <div class="control-group">
      <%= f.label :email, "注册邮箱", :class => "control-label" %>
      <div class="controls">
        <%= f.email_field :email, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, "注册密码", :class => "control-label" %>
      <div class="controls">
        <%= f.password_field :password, :class => "input-xlarge" %>
      </div>
    </div>
<!--
    <% if devise_mapping.rememberable? -%>
      <div class="control-group"><%= f.check_box :remember_me %> <%= f.label :remember_me, "记住密码" %></div>
    <% end -%>
    -->
    <div class="form-actions">
      <%= f.submit "登录", :class => "btn btn-primary" %>
      Or?
      <%= link_to "注册", new_user_registration_path %>
    </div>
  </fieldset>
  <% end %>

</div>

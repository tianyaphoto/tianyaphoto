<h2>用户登录</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="field"><%= f.label :email, "注册邮箱", :class => "text" %><br />
  <%= f.email_field :email, :class => "text" %></div>

  <div class="field"><%= f.label :password, "注册密码", :class => "text" %><br />
  <%= f.password_field :password, :class => "text" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "记住密码" %></div>
  <% end -%>

  <div class="field"><%= f.submit "登录" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>